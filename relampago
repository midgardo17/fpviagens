    <!-- Scripts -->
    <script>
        // Menu Hamburguer
        document.querySelector('.hamburger').addEventListener('click', () => {
            const navMenu = document.querySelector('.nav-menu');
            navMenu.classList.toggle('active');
            const spans = document.querySelectorAll('.hamburger span');
            spans.forEach((span, index) => {
                span.style.transform = navMenu.classList.contains('active') 
                    ? `rotate(${index === 1 ? '90deg' : '45deg'}) translate(${index === 1 ? '0' : '-5px'}, ${index === 1 ? '0' : '5px'})` 
                    : 'none';
            });
        });

        // Cronômetro de 24 horas
        const countdown = setInterval(() => {
            let timeLeft = 24 * 60 * 60; // 24h em segundos
            const timer = document.getElementById('countdown');
            const hours = Math.floor(timeLeft / 3600);
            const minutes = Math.floor((timeLeft % 3600) / 60);
            const seconds = timeLeft % 60;
            timer.textContent = `Oferta válida por ${hours}h ${minutes}m ${seconds}s`;
            timeLeft--;
            if (timeLeft < 0) {
                clearInterval(countdown);
                timer.textContent = "Promoção Encerrada!";
            }
        }, 1000);
    </script>
